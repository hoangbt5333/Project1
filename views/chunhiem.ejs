<div class="space-y-6">
  <% if (message) { %>
    <div id="toast-message"><%= message %></div>
  <% } %>

  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-bold text-slate-800">Danh sách giảng viên</h2>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head">
          <tr>
            <th class="px-4 py-3">Mã GV</th>
            <th class="px-4 py-3">Họ tên</th>
            <th class="px-4 py-3">Email</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% if (giangvienList.length === 0) { %>
            <tr><td colspan="3" class="px-4 py-6 text-center text-slate-500">Chưa có giảng viên nào.</td></tr>
          <% } else { %>
            <% giangvienList.forEach(gv => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-4 py-3 font-semibold text-slate-800"><%= gv.ma_gv %></td>
                <td class="px-4 py-3"><%= gv.ho_ten %></td>
                <td class="px-4 py-3"><%= gv.email || '' %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5 space-y-4">
    <h3 class="text-xl font-semibold text-slate-800">Thêm phân công chủ nhiệm</h3>
    <form action="/chunhiem/add" method="POST" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="lg:col-span-2">
        <label class="block text-sm font-semibold text-slate-700 mb-1">Giảng viên</label>
        <select name="ma_gv" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-white focus:ring-2 focus:ring-brand focus:border-brand">
          <option value="">-- Chọn giảng viên --</option>
          <% giangvienList.forEach(gv => { %>
            <option value="<%= gv.ma_gv %>"><%= gv.ma_gv %> - <%= gv.ho_ten %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-semibold text-slate-700 mb-1">Lớp</label>
        <select name="ma_lop" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-white focus:ring-2 focus:ring-brand focus:border-brand">
          <option value="">-- Chọn lớp --</option>
          <% lopList.forEach(l => { %>
            <option value="<%= l.ma_lop %>"><%= l.ten_lop %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-semibold text-slate-700 mb-1">Ngày bắt đầu</label>
        <input type="date" name="time_start" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
      </div>
      <div>
        <label class="block text-sm font-semibold text-slate-700 mb-1">Ngày kết thúc</label>
        <input type="date" name="time_end" class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
      </div>
      <div class="lg:col-span-4 flex justify-end">
        <button type="submit" class="px-5 py-3 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition">Lưu phân công</button>
      </div>
    </form>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <h3 class="text-xl font-semibold text-slate-800 mb-3">Danh sách lớp đã phân công</h3>
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head">
          <tr>
            <th class="px-4 py-3">Lớp</th>
            <th class="px-4 py-3">Giảng viên chủ nhiệm</th>
            <th class="px-4 py-3">Từ ngày</th>
            <th class="px-4 py-3">Đến ngày</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% if (chunhiemList.length === 0) { %>
            <tr><td colspan="4" class="px-4 py-6 text-center text-slate-500">Chưa có phân công nào.</td></tr>
          <% } else { %>
            <% chunhiemList.forEach(row => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-4 py-3 font-semibold text-slate-800"><%= row.ten_lop %></td>
                <td class="px-4 py-3"><%= row.ho_ten %></td>
                <td class="px-4 py-3 text-slate-500"><%= row.time_start %></td>
                <td class="px-4 py-3 text-slate-500"><%= row.time_end || '' %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
