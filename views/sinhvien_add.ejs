<div class="max-w-3xl">
  <div class="mb-4">
    <p class="text-xs uppercase tracking-[0.3em] text-slate-400 font-semibold">Sinh viên</p>
    <h2 class="text-2xl font-bold text-slate-800">Thêm sinh viên mới</h2>
  </div>
  <form action="/sinhvien/add" method="POST" class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-4">
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Mã sinh viên</label>
      <input type="text" name="ma_sv" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
    </div>
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Họ tên</label>
      <input type="text" name="ho_ten" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
    </div>
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Lớp</label>
      <select name="ma_lop" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-white focus:ring-2 focus:ring-brand focus:border-brand">
        <% lopList.forEach(k => { %>
          <option value="<%= k.ma_lop %>"><%= k.ten_lop %></option>
        <% }) %>
      </select>
    </div>
    <div class="flex items-center gap-3">
      <button type="submit" class="px-5 py-3 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition">Lưu</button>
      <a href="/sinhvien" class="px-5 py-3 border border-slate-200 text-slate-700 font-semibold rounded-xl hover:bg-slate-50 transition">Hủy</a>
    </div>
  </form>
</div>
