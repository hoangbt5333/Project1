<% if (user) { %>Xin chào, <%= user.username %><% } %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách sinh viên</h2>
    <form action="/sinhvien" method="GET" class="d-flex">
      <input 
        type="text" 
        name="search" 
        class="form-control me-2"
        placeholder="Tìm kiếm mã SV hoặc họ tên..."
        value="<%= keyword || '' %>"
      >
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-search"></i> Tìm
      </button>
    </form>
    <button class="btn btn-primary" onclick="window.location.href='/sinhvien/add'"><i class="fa-solid fa-plus"></i> Thêm sinh viên</button>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-primary">
      <tr>
        <th>STT</th>
        <th>MSSV</th>
        <th>Họ tên</th>
        <th>Lớp</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach((student, i) => { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= student.ma_sv %></td>
          <td><%= student.ho_ten %></td>
          <td><%= student.ten_lop %></td>
          <td>
            <form action="/sinhvien/view/<%= student.ma_sv %>" method="GET" class="d-inline">
              <button type="submit" class="btn btn-sm btn-primary"><i class="fa-solid fa-search"></i></button>
            </form>
            <form action="/sinhvien/edit/<%= student.ma_sv %>" method="GET" class="d-inline">
              <button type="submit" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></button>
            </form>
            <form action="/sinhvien/delete/<%= student.ma_sv %>" 
              method="POST" class="d-inline"
              onsubmit="return confirm('Bạn có chắc chắn muốn xóa sinh viên này không?');"
              >
              <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
