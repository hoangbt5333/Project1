<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-bold text-slate-800">Danh sách vai trò</h2>
  </div>

  <% if (message) { %>
    <div id="toast-message"><%= message %></div>
  <% } %>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head">
          <tr>
            <th class="px-4 py-3">ID</th>
            <th class="px-4 py-3">Tên người dùng</th>
            <th class="px-4 py-3">Vai trò</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% users.forEach(u => { %>
            <tr class="hover:bg-slate-50 transition">
              <td class="px-4 py-3"><%= u.id %></td>
              <td class="px-4 py-3 font-semibold text-slate-800"><%= u.username %></td>
              <td class="px-4 py-3">
                <form action="/roles/update/<%= u.id %>" method="POST" class="flex items-center gap-2">
                  <select name="role" class="px-3 py-2 border border-slate-200 rounded-lg bg-white text-sm focus:ring-2 focus:ring-brand focus:border-brand">
                    <option value="admin" <%= u.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    <option value="giangvien" <%= u.role === 'giangvien' ? 'selected' : '' %>>Giảng viên</option>
                    <option value="sinhvien" <%= u.role === 'sinhvien' ? 'selected' : '' %>>Sinh viên</option>
                  </select>
                  <button type="submit" class="px-4 py-2 bg-brand text-white text-sm font-semibold rounded-lg hover:bg-brand-soft transition">Cập nhật</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
