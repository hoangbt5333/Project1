<h2>Thêm lớp mới</h2>
<form action="/lop/add" method="POST" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Mã lớp</label>
    <input type="text" name="ma_lop" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Tên lớp</label>
    <input type="text" name="ten_lop" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Mã khoa</label>
    <select name="ma_khoa" class="form-select" required>
      <% khoaList.forEach(k => { %>
        <option value="<%= k.ma_khoa %>"><%= k.ten_khoa %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Lưu</button>
  <a href="/lop" class="btn btn-secondary">Hủy</a>
</form>
