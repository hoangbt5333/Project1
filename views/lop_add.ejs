<div class="max-w-3xl">
  <div class="mb-4">
    <p class="text-xs uppercase tracking-[0.3em] text-slate-400 font-semibold">Lớp</p>
    <h2 class="text-2xl font-bold text-slate-800">Thêm lớp học</h2>
  </div>
  <form action="/lop/add" method="POST" class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-4">
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Mã lớp</label>
      <input type="text" name="ma_lop" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
    </div>
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Tên lớp</label>
      <input type="text" name="ten_lop" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
    </div>
    <div>
      <label class="block text-sm font-semibold text-slate-700 mb-1">Khoa</label>
      <select name="ma_khoa" class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-white focus:ring-2 focus:ring-brand focus:border-brand">
        <% departmentList.forEach((k) => { %>
          <option value="<%= k.ma_khoa %>"><%= k.ten_khoa %></option>
        <% }) %>
      </select>
    </div>
    <div class="flex items-center gap-3">
      <button type="submit" class="px-5 py-3 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition">Lưu</button>
      <a href="/lop" class="px-5 py-3 border border-slate-200 text-slate-700 font-semibold rounded-xl hover:bg-slate-50 transition">Hủy</a>
    </div>
  </form>
</div>
