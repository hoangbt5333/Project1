<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-2xl bg-white rounded-2xl shadow-sm border border-slate-100 p-8 space-y-4">
    <% if (session) { %>
      <div class="text-center space-y-2">
        <p class="text-xs uppercase tracking-[0.3em] text-slate-400 font-semibold">Điểm danh</p>
        <h3 class="text-2xl font-bold text-slate-800"><%= session.title %></h3>
        <p class="text-slate-500"><i class="fa-solid fa-building-columns mr-1"></i> Lớp: <%= session.ten_lop || 'Tất cả' %> · <i class="fa-solid fa-book mr-1"></i> <%= session.ten_mon_hoc || 'Chưa chọn' %></p>
      </div>

      <% if (error) { %>
        <div class="bg-amber-50 text-amber-800 rounded-xl px-4 py-3 text-center"><%= error %></div>
      <% } %>

      <% if (success) { %>
        <div class="bg-emerald-50 text-emerald-800 rounded-xl px-4 py-3 text-center"><%= success %></div>
      <% } else if (!error) { %>
        <form action="/attendance/check/<%= session.token %>" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-1">Mã số sinh viên</label>
            <input type="text" name="ma_sv" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-1">Họ tên</label>
            <input type="text" name="ho_ten" required class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand">
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-1">Ghi chú (tuỳ chọn)</label>
            <textarea name="ghi_chu" rows="3" class="w-full px-4 py-3 border border-slate-200 rounded-xl bg-slate-50 focus:ring-2 focus:ring-brand focus:border-brand" placeholder="VD: Em đã có mặt tại phòng học..."></textarea>
          </div>
          <button class="w-full px-5 py-3 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition">
            <i class="fa-solid fa-check-to-slot mr-2"></i> Xác nhận điểm danh
          </button>
        </form>
      <% } %>
    <% } else { %>
      <div class="text-center space-y-3">
        <i class="fa-solid fa-triangle-exclamation text-amber-500 text-3xl"></i>
        <p class="font-semibold text-slate-800">Không tìm thấy buổi điểm danh này.</p>
        <p class="text-slate-500">Vui lòng kiểm tra lại đường dẫn hoặc liên hệ giảng viên.</p>
      </div>
    <% } %>
  </div>
</div>
