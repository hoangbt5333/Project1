<h2>Thêm môn học mới</h2>
<form action="/monhoc/add" method="POST" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Mã môn học</label>
    <input type="text" name="ma_mon_hoc" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Tên môn học</label>
    <input type="text" name="ten_mon_hoc" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Số tín chỉ</label>
    <input type="number" name="tin_chi" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Tên khoa</label>
    <select name="ma_khoa" class="form-select" required>
      <% khoaList.forEach(k => { %>
        <option value="<%= k.ma_khoa %>"><%= k.ten_khoa %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Lưu</button>
  <a href="/monhoc" class="btn btn-secondary">Hủy</a>
</form>
