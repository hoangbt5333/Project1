  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head sticky top-0 z-20">
          <tr class="bg-slate-50 text-xs uppercase text-slate-500 border-b border-slate-200">
            <th class="px-4 py-3">STT</th>
            <th class="px-4 py-3">Mã khoa</th>
            <th class="px-4 py-3">Tên khoa</th>
            <th class="px-4 py-3">Trưởng khoa</th>
            <th class="px-4 py-3">Thao tác</th>
          </tr>
        </thead>

        <tbody>
          <% if (departments.length === 0) { %>
            <tr><td colspan="5" class="px-4 py-6 text-center text-slate-500">Không có dữ liệu.</td></tr>
          <% } else { %>
            <% departments.forEach((department, index) => { %>
              <tr class="odd:bg-white even:bg-slate-100 hover:bg-gray-100 transition">
                <td class="px-4 py-3"><%= index + 1 %></td>
                <td class="px-4 py-3 font-semibold text-slate-800"><%= department.ma_khoa %></td>
                <td class="px-4 py-3"><%= department.ten_khoa %></td>
                <td class="px-4 py-3"><%= department.truong_khoa %></td>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <a href="/khoa/edit/<%= department.ma_khoa %>" class="px-3 py-2 text-xs font-semibold bg-amber-50 text-amber-700 rounded-lg hover:bg-amber-100 transition"><i class="fa-solid fa-pen"></i></a>
                    <form action="/khoa/delete/<%= department.ma_khoa %>" method="POST" onsubmit="return confirm('Bạn chắc chắn xóa khoa này?');">
                      <button type="submit" class="px-3 py-2 text-xs font-semibold bg-rose-50 text-rose-700 rounded-lg hover:bg-rose-100 transition"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
