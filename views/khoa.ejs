<% if (user) { %>Xin chào, <%= user.username %><% } %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách khoa</h2>
    <button class="btn btn-primary" onclick="window.location.href='/khoa/add'"><i class="fa-solid fa-plus"></i> Thêm khoa</button>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-primary">
      <tr>
        <th>STT</th>
        <th>Mã khoa</th>
        <th>Tên khoa</th>
        <th>Trưởng khoa</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% if (departments.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center">Không có dữ liệu</td>
        </tr>
      <% } else { %>
      <% departments.forEach((department, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= department.ma_khoa %></td>
          <td><%= department.ten_khoa %></td>
          <td><%= department.truong_khoa %></td>
          <td>
            <form action="/khoa/edit/<%= department.ma_khoa %>" method="GET" class="d-inline">
              <button type="submit" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></button>
            </form>
            
            <form action="/khoa/delete/<%= department.ma_khoa %>"
               method="POST" class="d-inline" 
               onsubmit="return confirm('Bạn có chắc chắn muốn xóa khoa này không?');"
               >
              <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% }) %>
      <% } %>
    </tbody>
  </table>
