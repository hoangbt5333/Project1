<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-slate-400 font-semibold">Lớp học</p>
      <h2 class="text-2xl font-bold text-slate-800">Danh sách lớp</h2>
    </div>
    <a href="/lop/add" class="inline-flex items-center gap-2 px-4 py-2 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition"><i class="fa-solid fa-plus"></i> Thêm lớp</a>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head">
          <tr>
            <th class="px-4 py-3">Mã lớp</th>
            <th class="px-4 py-3">Tên lớp</th>
            <th class="px-4 py-3">Khoa</th>
            <th class="px-4 py-3">Số sinh viên</th>
            <th class="px-4 py-3">Thao tác</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% if (classes.length === 0) { %>
            <tr><td colspan="5" class="px-4 py-6 text-center text-slate-500">Chưa có dữ liệu lớp học.</td></tr>
          <% } else { %>
            <% classes.forEach((lop) => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-4 py-3 font-semibold text-slate-800"><%= lop.ma_lop %></td>
                <td class="px-4 py-3"><%= lop.ten_lop %></td>
                <td class="px-4 py-3"><%= lop.ma_khoa || '—' %></td>
                <td class="px-4 py-3"><%= lop.so_sv || 0 %></td>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <a href="/lop/edit/<%= lop.ma_lop %>" class="px-3 py-2 text-xs font-semibold bg-amber-50 text-amber-700 rounded-lg hover:bg-amber-100 transition"><i class="fa-solid fa-pen"></i></a>
                    <form action="/lop/delete/<%= lop.ma_lop %>" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa lớp này?');">
                      <button type="submit" class="px-3 py-2 text-xs font-semibold bg-rose-50 text-rose-700 rounded-lg hover:bg-rose-100 transition"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
