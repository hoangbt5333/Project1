<% if (user) { %>Xin chào, <%= user.username %><% } %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách lớp học</h2>
        <button class="btn btn-primary" onclick="window.location.href='/lop/add'"><i class="fa-solid fa-plus"></i> Thêm lớp</button>
    </div>

        <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
            <th>Mã lớp</th>
            <th>Tên lớp</th>
            <th>Khoa</th>
            <th>Số sinh viên</th>
            <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <% if (classes.length === 0) { %>
            <tr>
                <td colspan="6" class="text-center text-muted">Chưa có dữ liệu lớp học</td>
            </tr>
            <% } else { %>
            <% classes.forEach((lop, index) => { %>
                <tr>
                    
                    <td><%= lop.ma_lop %></td>
                    <td><%= lop.ten_lop %></td>
                    <td><%= lop.ma_khoa || '—' %></td>
                    <td><%= lop.so_sinh_vien || 0 %></td>
                    <td>
                        <form action="/lop/edit/<%= lop.ma_lop %>" method="GET" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></button>
                        </form>

                        <form action="/lop/delete/<%= lop.ma_lop %>" 
                            method="POST" class="d-inline" 
                            onsubmit="return confirm('Bạn có chắc chắn muốn xóa lớp học này không?');"
                            >
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            <% } %>
        </tbody>
        </table>
