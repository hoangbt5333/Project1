<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-slate-400 font-semibold">Môn học</p>
      <h2 class="text-2xl font-bold text-slate-800">Danh sách môn học</h2>
    </div>
    <a href="/monhoc/add" class="inline-flex items-center gap-2 px-4 py-2 bg-brand text-white font-semibold rounded-xl hover:bg-brand-soft transition"><i class="fa-solid fa-plus"></i> Thêm môn</a>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-5">
    <div class="overflow-x-auto table-scroll">
      <table class="min-w-full text-left text-sm text-slate-700">
        <thead class="table-head">
          <tr>
            <th class="px-4 py-3">Mã môn học</th>
            <th class="px-4 py-3">Tên môn học</th>
            <th class="px-4 py-3">Khoa</th>
            <th class="px-4 py-3">Số tín chỉ</th>
            <th class="px-4 py-3">Thao tác</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% if (subjects.length === 0) { %>
            <tr><td colspan="5" class="px-4 py-6 text-center text-slate-500">Chưa có dữ liệu môn học.</td></tr>
          <% } else { %>
            <% subjects.forEach((monhoc) => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-4 py-3 font-semibold text-slate-800"><%= monhoc.ma_mon_hoc %></td>
                <td class="px-4 py-3"><%= monhoc.ten_mon_hoc %></td>
                <td class="px-4 py-3"><%= monhoc.ten_khoa || '—' %></td>
                <td class="px-4 py-3"><%= monhoc.tin_chi || 0 %></td>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <a href="/monhoc/edit/<%= monhoc.ma_mon_hoc %>" class="px-3 py-2 text-xs font-semibold bg-amber-50 text-amber-700 rounded-lg hover:bg-amber-100 transition"><i class="fa-solid fa-pen"></i></a>
                    <form action="/monhoc/delete/<%= monhoc.ma_mon_hoc %>" method="POST" onsubmit="return confirm('Bạn chắc chắn xóa môn học này?');">
                      <button type="submit" class="px-3 py-2 text-xs font-semibold bg-rose-50 text-rose-700 rounded-lg hover:bg-rose-100 transition"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
