<% if (user) { %>Xin chào, <%= user.username %><% } %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách môn học</h2>
        <button class="btn btn-primary" onclick="window.location.href='/monhoc/add'"><i class="fa-solid fa-plus"></i> Thêm môn học</button>
    </div>

        <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
            <th>Mã môn học</th>
            <th>Tên môn học</th>
            <th>Khoa</th>
            <th>Số tín chỉ</th>
            <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <% if (subjects.length === 0) { %>
            <tr>
                <td colspan="6" class="text-center text-muted">Chưa có dữ liệu môn học</td>
            </tr>
            <% } else { %>
            <% subjects.forEach((monhoc, index) => { %>
                <tr>

                    <td><%= monhoc.ma_mon_hoc %></td>
                    <td><%= monhoc.ten_mon_hoc %></td>
                    <td><%= monhoc.ten_khoa || '—' %></td>
                    <td><%= monhoc.tin_chi || 0 %></td>
                    <td>
                        <form action="/monhoc/edit/<%= monhoc.ma_mon_hoc %>" method="GET" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></button>
                        </form>

                        <form action="/monhoc/delete/<%= monhoc.ma_mon_hoc %>" 
                            method="POST" class="d-inline" 
                            onsubmit="return confirm('Bạn có chắc chắn muốn xóa môn học này không?');"
                            >
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            <% } %>
        </tbody>
        </table>
